    <script>
        const apiKey = 'YOUR_API_KEY';  // Replace with your OpenWeatherMap API key

        function getWeather() {
            const city = document.getElementById('cityInput').value || 'Paris';

            fetch(`https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    const cityName = data.name;
                    const description = data.weather[0].description;
                    const temp = Math.round(data.main.temp);
                    const humidity = data.main.humidity;
                    const windSpeed = data.wind.speed;
                    const icon = data.weather[0].icon;

                    document.getElementById('cityName').innerText = cityName;
                    document.getElementById('description').innerText = capitalizeFirstLetter(description);
                    document.getElementById('temp').innerText = `${temp}°C`;
                    document.getElementById('humidity').innerText = `Humidity: ${humidity}%`;
                    document.getElementById('wind').innerText = `Wind: ${windSpeed} km/h`;
                    document.getElementById('weatherIcon').innerHTML = `<img src="https://openweathermap.org/img/wn/${icon}.png" alt="${description}">`;
                })
                .catch(error => {
                    console.error('Error fetching weather data:', error);
                    alert('Could not retrieve weather data. Please check the city name or try again later.');
                });
        }

        function capitalizeFirstLetter(string) {
            return string.charAt(0).toUpperCase() + string.slice(1);
        }
    </script>
